// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String @id @default(uuid())
  first_name      String
  last_name       String
  username        String @unique
  email           String @unique
  phone_number    String @unique
  password        String
  role            String
  profile_picture Image? @relation(fields: [imageId], references: [id])
  imageId         Int?

  @@unique([phone_number, email])
  @@index([email, phone_number])
}

model Image {
  id         Int     @unique
  image_name String
  image_url  String
  is_deleted Boolean
  User       User[]
}
